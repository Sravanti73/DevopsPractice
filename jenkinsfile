node{
    def app
    stage('clone from github'){
        checkout scm
    }
    stage('build'){
        app=docker.build("Sravanti73/helloworld")
    }
    stage('test'){
        app.inside{
            sh 'echo "test passed"'
        }
    }
    stage('push image'){
        docker.withregistry('https://registry.hub.docker.com', 'dockerhub-cred'){
            app.push("${env.Build_Number}")
            app.push("latest")
        }
    }
}
